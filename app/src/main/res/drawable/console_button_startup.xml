<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="75dp" android:width="200dp" />
            <solid android:color="#F8F8F8" />
        </shape>
    </item>
    <item android:height="10dp" android:start="190dp">
        <shape android:shape="rectangle">
            <solid android:color="#256AF4" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="#92CDD5"/>
            <size android:height="10dp" android:width="150dp" />
            <corners android:radius="10dp"/>
            <gradient android:startColor="#00B1FF"
                android:endColor="#09B0FF"/>
        </shape>
    </item>
</layer-list>