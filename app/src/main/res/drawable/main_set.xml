<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="200dp" android:width="200dp" />
            <solid android:color="#4C2E2E" />
            <padding android:top="15dp" android:left="15dp" android:right="15dp" />
        </shape>
    </item>
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <solid android:color="#A5B1B3"/>
            <gradient
                android:startColor="#E3DADA"
                android:endColor="#B59F9F"
                android:type="radial"
                android:gradientRadius="100dp"/>
            <size android:height="125dp" android:width="175dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="40dp" android:width="200dp" />
            <solid android:color="#6E6262" />
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle" >
            <size android:height="40dp" android:width="200dp" />
            <solid android:color="#FFF8F8F8" />
        </shape>
    </item >
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="#92CDD5"/>
            <size android:height="10dp" android:width="150dp" />
            <corners android:radius="10dp"/>
            <padding android:bottom="30dp" />
            <gradient android:startColor="#21A4DF"
                android:endColor="#235065"/>
        </shape>
    </item>
    <item android:gravity="bottom" android:start="190dp" android:height="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#618DE4" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
</layer-list>